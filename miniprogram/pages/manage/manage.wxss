.jeeform {
  width: 100%;
  background-color: #FFF;
}
.jeeform .form-split {
  width: 100%;
  border-bottom: 1px solid #ECECEC;
}
.jeeform .form-group {
  padding: 30rpx 0rpx 10px 0px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  border-bottom: 1px solid #ECECEC;
}

.jeeform .form-label {
  color: #2b2b2b;
  height: 60rpx;
  line-height: 60rpx;
  letter-spacing: 1rpx;
  margin-bottom: 6px;
  padding-left: 0rpx;
  width: 100%;
}

.jeeform .form-title{
  font-size: 32rpx;
  color: #7f7f7f;
  width: 100%;
}

.jeeform .form-control {
  padding-left: 0px;
  width: 100%;
}

.jeeform .form-name {
  color: #7f7f7f;
  height: 40rpx;
  line-height: 60rpx;
  width: 180rpx;
  letter-spacing: 1rpx;
}

.jeeform .form-icon {
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  right: 60rpx;
  margin-top: 10rpx;
}

.jeeform .form-img {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  margin-bottom: 3rpx;
}

.jeeform .form-btn {
  margin-top: 60rpx;
  letter-spacing: 2rpx;
}

.jeeform .form-column{
  flex-direction: column;
  align-items: flex-start;
}

.jeeform .form-editor {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #dfdfdf;
}

.ql-active {
  color: #22C704;
}

textarea{
  padding-left: -5px;
  margin-left: 0px;
}

button{
  margin-top: 30rpx;
}


.jeecard {
  flex: 1;
	display: flex;
	flex-direction: column;
  align-items: left;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 30rpx solid #efefef;
}

.jeecard .title{
  width: 100%;
  font-weight: bold;
  text-align: left;
  padding: 20rpx 2rpx;
  margin-bottom: 10rpx;
}

.jeecard-opt{
  width: 100%;
  border-top: 1px solid #f6f6f6;
  padding-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.jeecard-opt button{
  border: none;
  background-color: #f6f6f6;
  margin: 0px;
  margin-right: 40rpx;
}

.jeecard-opt .tip{
  color: #8a8a8a;
  margin: 0rpx 15rpx;
}

/**
管理
*/
.mng-header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
}

.mng-header .title{
  flex: 1;
  font-weight: bolder;
}

.mng-header input{
  background-color: #FFF;
  margin-right: 15rpx;
  border-radius: 6rpx;
  padding-left: 6rpx;
  border: 1rpx solid #eee;
}


.mng-menu{
  display: flex;
  width: 100%;
  justify-content:center;
  align-items: center;
  text-align: center;
}

.mng-menu-item{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
  width: 33%;
  height: 60px;
  margin: 30rpx 15rpx;
  border-radius: 6rpx;
  background-color: #b5d9f8;
}
